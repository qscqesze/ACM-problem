//**************************************************************************************
inline ll read()
{
	int x=0,f=1;char ch=getchar();
	while(ch<'0'||ch>'9'){if(ch=='-')f=-1;ch=getchar();}
	while(ch>='0'&&ch<='9'){x=x*10+ch-'0';ch=getchar();}
	return x*f;
}
inline void P(int x)
{
    Num=0;if(!x){putchar('0');puts("");return;}
    while(x>0)CH[++Num]=x%10,x/=10;
    while(Num)putchar(CH[Num--]+48);
    puts("");
}

int a[maxn];
int b[maxn];
int main()
{
    int flag2=0;
    int n=read();
    int ma=0;
    int ma2=0;
    int sum=0;
    for(int i=0;i<n;i++)
        a[i]=read(),b[i]=read(),sum+=a[i];
    for(int i=0;i<n;i++)
        ma=max(ma,b[i]);
    int flag=0;
    for(int i=0;i<n;i++)
        if(b[i]==ma)
        {
            flag++;
            flag2=i;
        }

    if(flag==1)
    {
        for(int i=0;i<n;i++)
            if(b[i]!=ma)
                ma2=max(ma2,b[i]);

    }
    if(flag==1)
    {
        for(int i=0;i<n;i++)
        {
            if(i==flag2)
                printf("%d ",ma2*(sum-a[i]));
            else
                printf("%d ",ma*(sum-a[i]));
        }
    }
    else
    {
        for(int i=0;i<n;i++)
            printf("%d ",ma*(sum-a[i]));
    }
}
