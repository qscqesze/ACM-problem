inline ll read()
{
    int x=0,f=1;char ch=getchar();
    while(ch<'0'||ch>'9'){if(ch=='-')f=-1;ch=getchar();}
    while(ch>='0'&&ch<='9'){x=x*10+ch-'0';ch=getchar();}
    return x*f;
}
inline void P(int x)
{
    Num=0;if(!x){putchar('0');puts("");return;}
    while(x>0)CH[++Num]=x%10,x/=10;
    while(Num)putchar(CH[Num--]+48);
    puts("");
}
//**************************************************************************************

int main()
{
    string s1,s2;
    int n=read();
    cin>>s1>>s2;
    ll ans=0;
    for(int i=0;i<n;i++)
    {
        int k=s1[i]-'0';
        int m=s2[i]-'0';
        int ans1=0;
        int ans2=0;
        while(k!=m)
        {
            k++;
            k%=10;
            ans1++;
        }
        k=s1[i]-'0';
        while(k!=m)
        {
            k--;
            if(k<0)
                k+=10;
            ans2++;
        }
        ans+=min(ans1,ans2);
    }
    cout<<ans<<endl;

}
