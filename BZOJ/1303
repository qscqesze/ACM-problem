inline ll read()
{
	int x=0,f=1;char ch=getchar();
	while(ch<'0'||ch>'9'){if(ch=='-')f=-1;ch=getchar();}
	while(ch>='0'&&ch<='9'){x=x*10+ch-'0';ch=getchar();}
	return x*f;
}
inline void P(int x)
{
    Num=0;if(!x){putchar('0');puts("");return;}
    while(x>0)CH[++Num]=x%10,x/=10;
    while(Num)putchar(CH[Num--]+48);
    puts("");
}
//**************************************************************************************

int num[maxn];
int sum[maxn];
int l[maxn],r[maxn];
int point;
int main()
{
    int n,b;
    scanf("%d%d",&n,&b);
    for(int i=1;i<=n;i++)
    {
        scanf("%d",&num[i]);
        if(num[i]==b)
            point=i;
        if(num[i]>b)
            num[i]=1;
        else if(num[i]<b)
            num[i]=-1;
        else
            num[i]=0;
    }
    l[n]=1,r[n]=1;
    for(int i=point-1;i>=1;i--)
    {
        sum[i]=sum[i+1]+num[i];
        l[sum[i]+n]++;
    }
    for(int i=point+1;i<=n;i++)
    {
        sum[i]=sum[i-1]+num[i];
        r[sum[i]+n]++;
    }
    int ans=0;
    for(int i=0;i<=2*n;i++)
    {
        ans+=l[i]*r[2*n-i];
    }
    cout<<ans<<endl;
}
